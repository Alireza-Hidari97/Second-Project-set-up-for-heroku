<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- content for the edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">

            <h1><%= title %></h1>

            <form class="form" method="post">

                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter Contact Name"
                        name="ContactName" 
                        value = "<%= contact.ContactName %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="EmailTextField">Email</label>
                    <input type="text" class="form-control"
                        id="EmailTextField"
                        placeholder="Enter the Email Address"
                        name="Email" 
                        value = "<%= contact.Email %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="ContactNumberTextField">Contact number</label>
                    <input type="number" class="form-control"
                        id="ContactNumberTextField"
                        placeholder="Enter the Contact number"
                        name="ContactNumber" 
                        value = "<%= contact.ContactNumber %>"
                        required>
                </div>
                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>

    </div>

</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>