<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-12">
      <h1><%=title %> </h1>


      <a href="/contact-list/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i>Add a Contact</a>

      <br>
      <table class="table table-bordered table-striped table-hover">
        <tr class="d-flex">
          <% if((typeof displayName == 'string') && (displayName)) { %>
            <th class="text-center col-4">Contact Name</th>
            <th class="text-center col-4">Email</th>
            <th class=" col-2">Contact Number</th>
            <th class="text-center col-1"></th>
            <th class="text-center col-1"></th>
          <% } else { %>
          <th class="text-center col-4">Contact Name</th>
            <th class="text-center col-4">Email</th>
            <th class=" col-4">Contact Number</th>
          <%} %>
        </tr>
        <% for(let count=0;count < ContactList.length;count++) { %>
        <tr class="d-flex">
         <% if((typeof displayName == 'string') && (displayName)) { %>
            <td class="text-center col-4"><%= ContactList[count].ContactName %> </td>
            <td class="text-center col-4"><%= ContactList[count].Email %> </td>
            <td class="text-center col-2"><%= ContactList[count].ContactNumber %> </td>
            
            <td class="text-center col-1">
                <a href="/contact-list/edit/<%= ContactList[count]._id %> " class="btn btn-primary btn">
                <i class="fas fa-pencil-alt"></i>Edit</a>
            </td>
            <td class="text-center col-1">
                <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn">
                <i class="fas fa-trash-alt"></i>Delete</a>
            </td>
         <% } else { %>
                <td class="text-center col-4"><%= ContactList[count].ContactName %> </td>
                <td class="text-center col-4"><%= ContactList[count].Email %> </td>
                <td class="text-center col-4"><%= ContactList[count].ContactNumber %> </td>

         <%} %>
        </tr>
        <% } %>
      </table>
    </div>
  </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>